import nltk
from nltk.corpus import conll2000
 grammar="NP: {<DT|IN|PRP|NN>?<VBG><DT>?<NN>*}"
  cp=nltk.RegexpParser(grammar) # creating a Chunk parcer
 test_sents = conll2000.chunked_sents('test.txt'[:100], chunk_types=['NP'])
 print cp.evaluate(test_sents)

 sentence='The big dog walked out of the yard'
 sentence=sentence.split()
 tagged=nltk.pos_tag(sentence)
 result=cp.parse(tagged)
 print result

 chunkscore = nltk.chunk.ChunkScore()
 chunkscore.score(test_sents,result)
 for chunk in chunkscore.incorrect():
     print chunk

	
 for chunk in chunkscore.missed():
     print chunk
# creating rules for grammar
# creating a Chunk parcer
# evaluating the work of a chunker
# chunks which are included in the guesssed chunk structure are not included in the correct chunk structures
# chunks which are included in the correct chunk structure are not included in the guessed chunk structures
